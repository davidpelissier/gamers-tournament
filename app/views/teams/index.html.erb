<h1>Liste des équipes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Pays d'origine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.location %></td>
        <td><%= link_to 'Voir', team %></td>
        <td><%= link_to 'Editer', edit_team_path(team) %></td>
        <td><%= link_to 'Supprimer', team, method: :delete, data: { confirm: 'Etes vous sûr?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Créer une équipe', new_team_path, class: "btn btn-primary" %>
