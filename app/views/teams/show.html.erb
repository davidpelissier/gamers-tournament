<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @team.location %>
</p>

<p>
	<strong>Membres:</strong>
	<table class="table table-hover">
		<thead>
			<tr>
				<td>Username</td>
				<td>Action</td>
			</tr>
		</thead>
		<tbody>
		<% @team.users.each do |user| %>
			<tr>
				<td><%= user.username %></td>
				<% if @team.users.include?(current_user) %>
				<td><%= link_to "Partir", delete_user_from_team_path(@team.id) %></td>
				<% end %>
			</tr>
		<% end %>
		</tbody>	
	</table>
</p>

<%= link_to 'Back', teams_path %>
