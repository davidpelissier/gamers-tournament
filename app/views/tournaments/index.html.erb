<p id="notice"><%= notice %></p>

<h1>Listing Tournaments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Game</th>
      <th>Teams limit</th>
      <th>Signup start</th>
      <th>Signup end</th>
      <th>Check in</th>
      <th>Date</th>
      <th>Mode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tournaments.each do |tournament| %>
      <tr>
        <td><%= tournament.name %></td>
        <td><%= tournament.description %></td>
        <td><%= tournament.game_id %></td>
        <td><%= tournament.teams_limit %></td>
        <td><%= tournament.signup_start %></td>
        <td><%= tournament.signup_end %></td>
        <td><%= tournament.check_in %></td>
        <td><%= tournament.date %></td>
        <td><%= tournament.mode %></td>
        <td><%= link_to 'Show', tournament %></td>
        <td><%= link_to 'Edit', edit_tournament_path(tournament) %></td>
        <td><%= link_to 'Destroy', tournament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

