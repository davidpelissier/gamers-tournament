<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1 class="page-header">Se <strong>connecter</strong></h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :login, "Nom d\'utilisateur : "  %><br />
        <%= f.email_field :login, class: "form-control", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Mot de passe : " %><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Se souvenir de moi" %>
      </div>
      <% end -%>

      <%= f.submit "Connexion", class: "btn btn-primary pull-right" %>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>